<div class="row">
  <div class="question col-sm-4">
    <h2>Question</h2>
    <%= @question.text %>
  </div>
  <div class="answer col-sm-4">
    <h2>Answer</h2>
    <%= bootstrap_form_tag do |f| %>
      <%= f.collection_radio_buttons :answer, @question.answers, :id, :text, hide_label: true %>
      <%= f.submit %>
    <% end %>
  </div>
</div>
